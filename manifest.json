{
  "manifest_version": 3,
  "name": "CryptoPatrol",
  "version": "1.0",
  "description": "Monitors system metrics and detects cryptojacking.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:5050/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
